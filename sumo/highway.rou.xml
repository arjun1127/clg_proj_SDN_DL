<routes>
    <!-- Define Vehicle Type -->
    <vType id="car" accel="1.0" decel="1.5" sigma="0.5" length="5" maxSpeed="30"/>
    
    <!-- Valid Routes Connecting Main Roads and Extra Lanes -->
    <route id="route1" edges="road1 road2 road3 merge_road5 merge_road6 road4 road5 road6"/>
    <route id="route2" edges="road2 road3 merge_road5 merge_road6 road4 road5"/>
    <route id="route3" edges="road3 merge_road5 merge_road6 road4"/>
    <route id="route4" edges="merge_road6 road4 road5 road6"/>

    <!-- Vehicles Assigned to Routes -->
    <vehicle id="car1" type="car" route="route1" depart="0"/>
    <vehicle id="car2" type="car" route="route2" depart="1"/>
    <vehicle id="car3" type="car" route="route3" depart="2"/>
    <vehicle id="car4" type="car" route="route4" depart="3"/>
</routes>



